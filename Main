public class Main {
    public static void main(String[] args) {
        int trials = 5;
        int width = 500;

        try {
            if (args.length == 0) {
                System.out.println("[+] (Default) Parameters: " + trials + " trials, " + width + " wide");
            } else {
                trials = Integer.parseInt(args[0]);
                width = Integer.parseInt(args[1]);
                System.out.println("[+] Parameters: " + trials + " trials, " + width + " wide");
            }
        } catch (NumberFormatException numberFormatException) {
            System.out.println("[-] Arguments should be integers!");
            System.exit(1);
        }

        Statistics statistics = new Statistics(trials, width);

        System.out.println("[+] Arithmetic Mean: " + statistics.mean());
        System.out.println("[+] Standard Deviation: " + statistics.standarddev());
        System.out.println("[+] Total Simulation Runtime: " + statistics.runtime() + " ms");
    }
}
