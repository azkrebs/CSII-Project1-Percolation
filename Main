import java.util.*;

public class Main {
    public static void main(String[] args) {
        Percolation percolation = new Percolation(10);
        for (int i = 0; i < percolation.dimension; i++) {
            percolation.union(percolation.area, percolation.parent[i]);
            percolation.union(percolation.area + 1, percolation.parent[percolation.area - i]);
        }
        int counter = 0;
        while (!percolation.connected(percolation.area, percolation.area + 1)) {
            Random random = new Random();
            int number = random.nextInt((percolation.area) + 1);
            if (percolation.board[number]) {
                percolation.open(number);
                counter += 1;
            }
        }

        System.out.println(counter);
    }
}
